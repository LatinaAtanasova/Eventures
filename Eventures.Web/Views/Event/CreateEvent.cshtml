@model Eventures.Web.ViewModels.Events.CreateEventViewModel

@{
    ViewData["Title"] = "CreateEvent";
}


<div class="container" style="padding-top: 20px; text-align: center">
    <div class="row">
        <div class="col-md-7 col-md-offset-2">
            <section>
                <h2 style="font-weight:bold">@ViewData["Title"]</h2>
                <form method="post" asp-controller="Event" asp-action="CreateEvent">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <hr style="height: 3px; background-color: #66ffff" />
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" placeholder="Name...">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="Place"></label>
                                <input asp-for="Place" class="form-control" placeholder="Place...">
                                <span asp-validation-for="Place" class="text-danger"></span>
                            </div>
                        </div>
                        <hr style="height: 3px; background-color: #66ffff" />
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="Start"></label>
                                <input asp-for="Start" class="form-control" placeholder="Start...">
                                <span asp-validation-for="Start" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="End"></label>
                                <input asp-for="End" class="form-control" placeholder="End...">
                                <span asp-validation-for="End" class="text-danger"></span>
                            </div>
                        </div>
                        <hr style="height: 3px; background-color: #66ffff" />
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label asp-for="TotalTickets"></label>
                                    <input asp-for="TotalTickets" class="form-control" placeholder="Total Tickets...">
                                    <span asp-validation-for="TotalTickets" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label asp-for="PricePerTicket"></label>
                                    <input asp-for="PricePerTicket" class="form-control" placeholder="Price Per Ticket...">
                                    <span asp-validation-for="PricePerTicket" class="text-danger"></span>
                                </div>
                            </div>
                    </div>
                    <hr style="height: 3px; background-color: #66ffff" />
                    <div class="button-holder d-flex justify-content-center" style="margin-bottom: 25px">
                        <button type="submit" class="btn eventures-bg-color-bg-color">Create Event</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>