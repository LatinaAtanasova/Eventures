<form class="form-inline" method="post" asp-controller="Order" asp-action="Create">
    <div class="form-group mx-sm-3 mb-2">
        <label asp-for="TicketsCount" style="font-weight: bold">Tickets</label>
        <input asp-for="TicketsCount" class="form-control">
        <span asp-validation-for="TicketsCount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mb-2" style="background-color: #AFEEEE; color: black; border-color: darkgrey">Order</button>
    <input type="hidden" asp-for="EventId" value="@Model.EventId"/>
</form>