
@using Eventures.Web.ViewModels.Accounts
@model ICollection<Eventures.Web.ViewModels.Accounts.UserAdministrationViewModel>


@{
    ViewData["Title"] = "User Administration";
}



<h2 style="text-align: center; font-weight: bold">@ViewData["Title"]</h2>

<div class="container">
    <hr style="height: 3px; background-color: #66ffff" />
    <table class="table table-hover">

        <thead>
        <tr style="font-weight: bold">
            <th>#</th>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Role</th>

        </tr>
        </thead>
        <tbody>
            
        @{
            var counter = 1;
        }
        @foreach (var item in @Model)
        {
            <tr>
                <td>@counter</td>
                <td>@item.Username</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.CurrentUserRole</td>

                <td>
                    @await Html.PartialAsync("_ChangeRole", new AdministrationViewModel
                    {
                        UserId = @item.UserId,
                        CurrentRole = @item.CurrentUserRole
                    })
                </td>
            </tr>

            counter++;
        }
        </tbody>
    </table>
    @*@Html.PagedListPager((IPagedList) ViewBag.OnePageOfUsers, page => Url.Action("UserAdministration", new {page}))*@

    <hr style="height: 3px; background-color: #66ffff" />

</div>


