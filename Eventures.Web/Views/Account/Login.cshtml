@using Eventures.Models
@using Eventures.Web.Areas.Identity.Pages.Account
@using Microsoft.AspNetCore.Identity
@using Microsoft.Extensions.Logging
@using LoginModel = Microsoft.AspNetCore.Identity.UI.Pages.Account.Internal.LoginModel
@model Eventures.Web.ViewModels.Accounts.LoginViewModel

@inject SignInManager<EventuresUser> SignInManager
@inject ILogger<Eventures.Web.Areas.Identity.Pages.Account.LoginModel> logger;



<div class="container-fluid">
    <main class="mt-3" style="width:50%; margin:auto">
        <h1 class="text-center">Login</h1>

        <form class="mx-auto half-width" method="post" asp-controller="Account" asp-action="Login">
            <hr style="height: 3px; background-color: #66ffff" />
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" placeholder="Username...">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Password...">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <hr style="height: 3px; background-color: #66ffff" />
            <div class="form-group" style="width:50%; margin:auto">
                <div class="checkbox">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" style="margin-left:10px" />
                </div>
            </div>
            <hr style="height: 3px; background-color: #66ffff" />
            <div class="button-holder d-flex justify-content-center" style="width:50%; margin:auto; display: flex; align-items: center; justify-content: center">
                <button type="submit" class="btn eventures-bg-color">Login</button>
            </div>
            <br />
            <a href="#" style="color: blue; width:50%; margin:auto; display: flex; align-items: center; justify-content: center">Forgot your password?</a>
            <br />
            <a href="#" style="color: blue; width:50%; margin:auto; margin-bottom: 25px; display: flex; align-items: center; justify-content: center">Register as a new user</a>
            <hr style="height: 3px; background-color: #66ffff" />

            <p>Регистрацията през Фейсбук е активна на Identity/Account/Login.</p>
            

            @*@await Html.PartialAsync("_LoginExternal", new Eventures.Web.Areas.Identity.Pages.Account.LoginModel(SignInManager, logger))*@

            <hr style="height: 3px; background-color: #66ffff" />

        </form>

    </main>
</div>
