@model Eventures.Web.ViewModels.Accounts.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container" style="padding-top: 20px; text-align: center">
    <div class="row">
        <div class="col-md-7 col-md-offset-2">
            <section>
                <h2 style="font-weight:bold">@ViewData["Title"]</h2>
                <form method="post" asp-controller="Account" asp-action="Register">
                    <hr style="height: 3px; background-color: #66ffff" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control" placeholder="Username...">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" placeholder="Password...">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" placeholder="Email...">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password...">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr style="height: 3px; background-color: #66ffff" />
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" class="form-control" placeholder="First Name...">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" class="form-control" placeholder="Last Name...">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label asp-for="UniqueCitizenNumber"></label>
                                <input asp-for="UniqueCitizenNumber" class="form-control" placeholder="Universal Citizen Number...">
                                <span asp-validation-for="UniqueCitizenNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr style="height: 3px; background-color: #66ffff" />
                    <div class="button-holder d-flex justify-content-center" style="margin-bottom: 25px">
                        <button type="submit" class="btn eventures-bg-color-bg-color">Register</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
    